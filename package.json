{
  "name": "linux-teams",
  "productName": "Linux Teams",
  "version": "1.2.1",
  "description": "An unofficial Microsoft Teams application for Linux",
  "main": "app/App.js",
  "scripts": {
    "start": "electron .",
    "test": "eslint --ext .js src",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-context-menu": "^0.9.1",
    "electron-window-state": "^4.1.1"
  },
  "devDependencies": {
    "electron": "1.8.2",
    "electron-builder": "~20.0.4",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1"
  },
  "build": {
    "appId": "com.github.arslivinski.linux-teams",
    "files": [
      "assets/**/*",
      "app/**/*"
    ],
    "linux": {
      "category": "Network;Chat",
      "packageCategory": "net",
      "executableName": "LinuxTeams",
      "synopsis": "Linux Teams",
      "description": "An unofficial Microsoft Teams application for Linux",
      "desktop": {
        "Name": "Linux Teams",
        "Comment": "An unofficial Microsoft Teams application for Linux",
        "StartupWMClass": "Linux Teams"
      },
      "target": [
        "tar.gz",
        "rpm",
        "deb"
      ]
    }
  },
  "author": "Anderson Slivinski <arslivinski@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/arslivinski/linux-teams#readme",
  "bugs": {
    "url": "https://github.com/arslivinski/linux-teams/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arslivinski/linux-teams.git"
  },
  "keywords": [
    "Microsoft Teams",
    "Teams",
    "Linux",
    "Electron"
  ]
}
